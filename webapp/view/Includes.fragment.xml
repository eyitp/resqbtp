<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" class="sapUiSizeCompact">
    <Dialog contentWidth="45em" contentHeight="15em">
        <customHeader>
            <Toolbar>
                <Title text="Includes Details" />
                <ToolbarSpacer />
                <Button icon="sap-icon://sys-cancel" text="Close" press="OnIncludesPopupClose" type="Emphasized" />
            </Toolbar>
        </customHeader>
        <Table id="tabDetails" sticky="ColumnHeaders,HeaderToolbar" items="{Includes>/}">
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{Includes>ProgramName}" />
                        <Text text="{Includes>Type}" />
                        <Text text="{Includes>Name}" />
                    </cells>
                </ColumnListItem>
            </items>
            <columns>
                <Column>
                    <Label text="Program Name" />
                </Column>
                <Column>
                    <Label text="Type" />
                </Column>
                <Column>
                    <Label text="Name" />
                </Column>
            </columns>
        </Table>
    </Dialog>
</core:FragmentDefinition>
