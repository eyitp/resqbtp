<core:FragmentDefinition xmlns="sap.m" xmlns:ui="sap.ui.table" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog id="PopupDialog" contentWidth="55em">
        <customHeader>
            <Toolbar>
                <Title text="Whitelisted API Details" />
                <ToolbarSpacer />
                <Button icon="sap-icon://sys-cancel" text="Close" press="OnGFWhitelistDetailPopupClose" type="Emphasized" />
            </Toolbar>
        </customHeader>
        <IconTabBar id="idResqIconTabBar" class="sapUiMediumMarginTop sapUiTinyMargin">
            <items>
                <IconTabFilter text="Sales" key="Sales">
                    <ui:Table rows="{GFAPISalesDetails>/}" class="sapUiTinyMargin" selectionMode="None" visibleRowCount="5">
                        <ui:columns>
                            <ui:Column width="30%">
                                <Label text="API Name" />
                                <ui:template>
                                    <Text text="{GFAPISalesDetails>APIName}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column width="20%">
                                <Label text="API Type" />
                                <ui:template>
                                    <Text text="{GFAPISalesDetails>APIType}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column width="45%">
                                <Label text="Service" />
                                <ui:template>
                                    <Text text="{GFAPISalesDetails>Service}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column>
                                <Label text="" />
                                <ui:template alignItems="Center">
                                    <core:Icon src="sap-icon://download" press="onGFWhitelistDetailProcess" />
                                </ui:template>
                            </ui:Column>
                        </ui:columns>
                    </ui:Table>
                </IconTabFilter>
                <IconTabFilter text="Finance" key="Finance">
                    <ui:Table rows="{GFAPIFinanceDetails>/}" class="sapUiTinyMargin" selectionMode="None" visibleRowCount="5">
                        <ui:columns>
                            <ui:Column width="30%">
                                <Label text="API Name" />
                                <ui:template>
                                    <Text text="{GFAPIFinanceDetails>APIName}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column width="20%">
                                <Label text="API Type" />
                                <ui:template>
                                    <Text text="{GFAPIFinanceDetails>APIType}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column width="45%">
                                <Label text="Service" />
                                <ui:template>
                                    <Text text="{GFAPIFinanceDetails>Service}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column>
                                <Label text="" />
                                <ui:template alignItems="Center">
                                    <core:Icon src="sap-icon://download" press="onGFWhitelistDetailProcess" />
                                </ui:template>
                            </ui:Column>
                        </ui:columns>
                    </ui:Table>
                </IconTabFilter>
                <IconTabFilter text="Product Lifecycle Management" key="PLC">
                    <ui:Table rows="{GFAPIPLCDetails>/}" class="sapUiTinyMargin" selectionMode="None" visibleRowCount="5">
                        <ui:columns>
                            <ui:Column width="30%">
                                <Label text="API Name" />
                                <ui:template>
                                    <Text text="{GFAPIPLCDetails>APIName}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column width="20%">
                                <Label text="API Type" />
                                <ui:template>
                                    <Text text="{GFAPIPLCDetails>APIType}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column width="45%">
                                <Label text="Service" />
                                <ui:template>
                                    <Text text="{GFAPIPLCDetails>Service}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column>
                                <Label text="" />
                                <ui:template alignItems="Center">
                                    <core:Icon src="sap-icon://download" press="onGFWhitelistDetailProcess" />
                                </ui:template>
                            </ui:Column>
                        </ui:columns>
                    </ui:Table>
                </IconTabFilter>
                <IconTabFilter text="Procurement" key="Procurement">
                    <ui:Table rows="{GFAPIProcureDetails>/}" class="sapUiTinyMargin" selectionMode="None" visibleRowCount="5">
                        <ui:columns>
                            <ui:Column width="30%">
                                <Label text="API Name" />
                                <ui:template>
                                    <Text text="{GFAPIProcureDetails>APIName}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column width="20%">
                                <Label text="API Type" />
                                <ui:template>
                                    <Text text="{GFAPIProcureDetails>APIType}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column width="45%">
                                <Label text="Service" />
                                <ui:template>
                                    <Text text="{GFAPIProcureDetails>Service}" wrapping="false" />
                                </ui:template>
                            </ui:Column>
                            <ui:Column>
                                <Label text="" />
                                <ui:template alignItems="Center">
                                    <core:Icon src="sap-icon://download" press="onGFWhitelistDetailProcess" />
                                </ui:template>
                            </ui:Column>
                        </ui:columns>
                    </ui:Table>
                </IconTabFilter>
            </items>
        </IconTabBar>
    </Dialog>
</core:FragmentDefinition>
