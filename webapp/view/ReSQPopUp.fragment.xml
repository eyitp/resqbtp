<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f" xmlns:card="sap.f.cards" xmlns:mchart="sap.suite.ui.microchart" xmlns:w="sap.ui.integration.widgets">
    <Dialog id="UserDialog" title="Service Activation">
        <HBox>
            <Avatar src="sap-icon://crm-service-manager" displayShape="Circle" />
            <Title text="{ServiceDetails>/0/Title}" />
        </HBox>
        <Label text="Info" />
        <Text class="sapUiTinyMargin" text="{ServiceDetails>/Description}" />
        <Label text="Features" />
        <FormattedText htmlText="{ServiceDetails>/Features}" />
        <Label text="Pre-Requisite" />
        <FormattedText htmlText="{ServiceDetails>/PreRequisite }" />
        <buttons>
            <Button id="IdBookSlotCancel" text="Cancel" press="OnBookSlotCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
